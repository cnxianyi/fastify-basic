{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "es6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@router/*": ["src/router/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*.js" , "types/**/*", "test.js"],
  "exclude": ["node_modules"]
}
